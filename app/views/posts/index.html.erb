<div id="posts">
	
	<% @posts.each do |post|%>
		<div class="post">
			<h2 class="title"><%= link_to post.title, post_path(post) %></h2>
	<label class="datetime"><p>
	Submitted by: <%= post.user.email %> | 
	<%= time_ago_in_words(post.created_at) %> ago |
	<%= link_to 'Edit', edit_post_path(post) %> 
	<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></p></label>

	<% end %>
	</div>
</div>